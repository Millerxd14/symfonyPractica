{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - Estudiantes
{% endblock %}
{% block stylesheets %} {{ parent() }} {% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            {{  form_start(formulario,{'action':'#'}) }}
                <div class="col">
                    {{form_label(formulario.nombre)}}
                    {{ form_widget(formulario.nombre,{'attr':{'value':estudiante.nombre}}) }}
                </div>
                <div class="col">
                    {{form_label(formulario.edad)}}
                    {{ form_widget(formulario.edad,{'attr':{'value':estudiante.edad}}) }}
                </div>
                <div class="col">
                    {{form_label(formulario.grado)}}
                    {{ form_widget(formulario.grado,{'attr':{'value':estudiante.grado}}) }}
                </div>
            {{ form_end(formulario) }}
        </div>
    
        <div class="row justify-content-center">
            <a class="btn btn-primary" href="{{path('estudiantes_registro')}}">Registrar nuevo estudiante</a>
        </div>
    </div>

    {% block javascripts %}
    {{ parent() }}
    {% endblock %}
    
    
{% endblock %}